---

<section id='advantages' class='py-10 md:py-20'>
	<div class='grid sm:grid-cols-2 lg:grid-cols-3 gap-7'>
		{
			items.map(item => (
				<div class='flex flex-col items-center'>
					<Image src={item.image} alt='advantage' class='mb-5' quality={100} />
					<h2 class='text-xl sm:text-2xl text-primary font-bold mb-4 text-center'>{item.title}</h2>
					<p class='sm:text-lg text-gray line-clamp-2 text-center mt-auto mx-auto max-w-[400px]'>{item.description}</p>
				</div>
			))
		}
	</div>
</section>
